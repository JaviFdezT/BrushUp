<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.jft.brushup.ShowWord">


    <ScrollView android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

    <TextView
        android:id="@+id/word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_width="match_parent" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="212dp"
        app:layout_constraintTop_toBottomOf="@+id/word"
        tools:layout_width="match_parent" />

    <TextView
        android:id="@+id/mean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="#000000"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        tools:layout_width="match_parent" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="212dp"
        app:layout_constraintTop_toBottomOf="@+id/mean"
        tools:layout_width="match_parent" />


            <TextView
                android:id="@+id/example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintTop_toBottomOf="@+id/divider3"
                tools:layout_width="match_parent" />

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="212dp"
                app:layout_constraintTop_toBottomOf="@+id/example"
                tools:layout_width="match_parent" />


            <TextView
                android:id="@+id/levelthisword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textColor="#F81605"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintTop_toBottomOf="@+id/divider4"
                tools:layout_width="match_parent" />


            <Button
                android:id="@+id/button_dict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B0F7F7"
                android:text="@string/button_dict"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/levelthisword"
                tools:layout_width="match_parent" />


            <Button
                android:id="@+id/button_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B0F7F7"
                android:text="@string/button_edit"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/button_dict"
                tools:layout_width="match_parent" />


            <Button
                android:id="@+id/button_del"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B0F7F7"
                android:text="@string/button_del"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/button_edit"
                tools:layout_width="match_parent" />

    <Button
        android:id="@+id/button_mainMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B0F7F7"
        android:text="@string/button_mainmenu"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/button_del"
        tools:layout_width="match_parent" />


</LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
