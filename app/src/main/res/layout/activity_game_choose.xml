<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".GameChoose">

    <ScrollView android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttoncheck1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B0F7F7"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/question"
        tools:layout_width="match_parent" />
    <Button
        android:id="@+id/buttoncheck2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B0F7F7"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/buttoncheck1"
        tools:layout_width="match_parent" />
    <Button
        android:id="@+id/buttoncheck3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B0F7F7"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/buttoncheck2"
        tools:layout_width="match_parent" />
    <Button
        android:id="@+id/buttoncheck4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B0F7F7"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/buttoncheck3"
        tools:layout_width="match_parent" />
    <Button
        android:id="@+id/buttoncheck5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B0F7F7"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/buttoncheck4"
        tools:layout_width="match_parent" />
    <Button
        android:id="@+id/buttoncheck6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B0F7F7"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/buttoncheck5"
        tools:layout_width="match_parent" />
</LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>