<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.jft.brushup.SeeAllWords">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="4dp"
    android:orientation="vertical">

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/listview2"
        android:layout_height="0dip"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/button_orderedByLevel"
        android:layout_weight="1" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_weight="0" >

        <Button
            android:id="@+id/button_goAgainToDict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#B0F7F7"
            android:layout_alignParentRight="true"
            android:text="@string/button_goback"
            android:layout_alignTop="@+id/button_orderedByLevel"
            android:layout_toRightOf="@+id/view" />


        <View
            android:id="@+id/view"
            android:layout_width="4dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true" />


        <Button
            android:id="@+id/button_orderedByLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B0F7F7"
            android:text="Order by level"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/view" />


    </RelativeLayout>


</LinearLayout>
</android.support.constraint.ConstraintLayout>
