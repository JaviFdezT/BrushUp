<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jft.brushup.ShowPhoneme">

    <ScrollView android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/thisphoneme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_width="match_parent" />

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="212dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/thisnote"
                tools:layout_width="match_parent" />

            <TextView
                android:id="@+id/thisnote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@+id/divider1"
                tools:layout_width="match_parent" />



            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="212dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/thisnote"
                tools:layout_width="match_parent" />

            <TextView
                android:id="@+id/thisuse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@+id/divider2"
                tools:layout_width="match_parent" />

            <TextView
                android:id="@+id/thisexample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@+id/thisuse"
                tools:layout_width="match_parent" />

            <Button
                android:id="@+id/button_mainMenu_fromphonshow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B0F7F7"
                android:text="@string/button_goback"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/thisexample"
                tools:layout_width="match_parent" />


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
