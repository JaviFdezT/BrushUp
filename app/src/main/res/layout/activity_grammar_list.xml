<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jft.brushup.GrammarList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <EditText android:id="@+id/inputSearch2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search note.."
        android:layout_weight="0"
        app:layout_constraintTop_toTopOf="parent"
        android:inputType="textVisiblePassword"/>

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/listview"
        android:layout_height="0dip"
        android:layout_width="match_parent"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/inputSearch2"/>


    <Button
        android:id="@+id/button_mainMenu_fromGrammarList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B0F7F7"
        android:text="@string/button_goback"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_weight="0"
        tools:layout_width="match_parent" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
